<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_item_thumb"
        android:layout_width="@dimen/dimen_item_image_width"
        android:layout_height="@dimen/dimen_item_image_height"
        android:scaleType="centerCrop"
        android:transitionName="random_user_detail_transition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/itemTextBackground"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:lines="1"
        android:padding="8dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/imageView_item_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_item_thumb"
        app:layout_constraintTop_toTopOf="@id/imageView_item_thumb"
        app:layout_constraintVertical_bias="1.0"
        tools:text="@tools:sample/full_names" />

</android.support.constraint.ConstraintLayout>